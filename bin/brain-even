#!/usr/bin/env php
<?php

require __DIR__ . '/../vendor/autoload.php';

use    function cli\line;
use function cli\prompt;

function startBrainEven()
{
    line('Welcome to the Brain Game!');
    $name = prompt('May I have your name?');
    line("Hello, %s!", $name);
    $firstQuestion = "Answer \"yes\" if the number is even, otherwise answer \"no\".";
    line($firstQuestion);

    for ($i = 0; $i < 3; $i++) {

        $number = rand(1, 100);
        $rightAnswer = '';

        switch ($number % 2) {
            case 0:
                $rightAnswer = 'yes';
                break;
            case 1:
                $rightAnswer = 'no';
        }

        $answer = prompt("Question: $number");
        line("Your answer: %s", $answer);

        if ($number % 2 === 0 && $answer === 'yes') {
            line('Correct!');
        } elseif ($number % 2 === 1 && $answer === 'no') {
            line('Correct!');
        } else {
            line("{$answer} is wrong answer ;(. Correct answer was '{$rightAnswer}'. Let's try again, {$name}!");
            break;
        }

        if ($i === 2) {
            line("Congratulations, {$name}!");
        }
    }
}
